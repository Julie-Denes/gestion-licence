{% extends 'base.html.twig' %}

{% block title %}Liste des blocs d'enseignements{% endblock %}

{% block body %}
    <h1 class="mb-4">Blocs d'Enseignements</h1>
        <form method="get" action="{{ path('bloc_enseignement_list') }}" class="mb-3 d-flex" style="gap: 10px;">
            <input type="text"
                name="filtreNom"
                value="{{ filtreNom }}"
                placeholder="Rechercher par nom"
                class="form-control"
                style="max-width: 200px;">

            <input type="text"
                name="filtreCode"
                value="{{ filtreCode }}"
                placeholder="Rechercher par code"
                class="form-control"
                style="max-width: 100px;">

    <button type="submit" class="btn btn-jaune">Rechercher</button>
    <a href="{{ path('bloc_enseignement_list') }}" class="btn btn-secondary">Réinitialiser</a>
</form>
        

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Nombre d'heure</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for enseignement in enseignements %}
                    <tr>
                        <td>{{ enseignement.code }}</td>
                        <td>{{ enseignement.nom }}</td>
                        <td>{{ enseignement.description }}</td>
                        <td>{{ enseignement.nbHeure }}</td>
                        <td>
                            <a href="{{ path('bloc_enseignement_edit', {'id': enseignement.id}) }}" class="btn btn-sm btn-primary">
                            Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun bloc d'enseignement trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}