        <a href="#" class="menu-link"><img src="{{ asset('media/icons/typeinterventionbleu.png') }}" alt="Types d'interventions" style="width: 20px; height: auto; margin-right: 10px;" data-hover="{{ asset('media/icons/typeinterventionblanc.png') }}">Types d'interventions</a>
    </div>

    <div class="user-info">
        <img src="{{ asset('media/icons/stella.png') }}" alt="icon">
        <div class="user-details">
            <p style="color: black; font-weight: bold;">Stella Ribas</p>
            <p>Administrateur</p>
        </div>
    </div>
</div>

<script>
document.querySelectorAll('.menu-link img').forEach(icon => {
    const original = icon.src;
    const hover = icon.dataset.hover;

    icon.parentElement.addEventListener('mouseenter', () => {
        icon.src = hover;
    });

    icon.parentElement.addEventListener('mouseleave', () => {
        icon.src = original;
    });
});
</script>
