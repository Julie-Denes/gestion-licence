{% extends 'base.html.twig' %}

{% block title %}Liste des types d'intervention{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des types d'intervention</h1>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Couleur</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td>{{ type.id }}</td>
                        <td>{{ type.nom }}</td>
                        <td>{{ type.description }}</td>
                        <td>
                            <span style="display:inline-block; width:20px; height:20px; background-color:{{ type.couleur }}; border:1px solid #000; margin-right:5px;"></span>
                            {{ type.couleur }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun type d’intervention trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
