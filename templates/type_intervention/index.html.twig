{% extends 'base.html.twig' %}

{% block title %}Liste des types d'intervention{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Types d'intervention</h1>
        <a href="{{ path('type_intervention_add') }}" class="btn btn-bleu btn-success">
            + Ajouter un type
        </a>
    </div>

        <form method="get" action="{{ path('type_intervention_list') }}" class="mb-3 d-flex" style="gap: 10px;">
            <input type="text"
                   name="filtre"
                   value="{{ filtre }}"
                   placeholder="Rechercher par nom"
                   class="form-control"
                   style="max-width: 300px;">
            <button type="submit" class="btn btn-jaune">Rechercher</button>
            <a href="{{ path('type_intervention_list') }}" class="btn btn-blanc btn-secondary">Réinitialiser</a>
        </form>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Couleur</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td>{{ type.nom }}</td>
                        <td>{{ type.description }}</td>
                        <td>
                            <span style="display:inline-block; width:20px; height:20px; background-color:{{ type.couleur }}; border:1px solid #000; margin-right:5px;"></span>
                            {{ type.couleur }}
                        </td>
                        <td>
                            <a href="{{ path('type_intervention_edit', {'id': type.id}) }}" class="btn btn-bleu btn-primary">
                            Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun type d’intervention trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
