{% extends 'base.html.twig' %}

{% block title %}Liste du corps enseignant{% endblock %}

{% block body %}
<div class="container mt-4">
        <h1 class="mb-4">Corps Enseignants</h1>
        <a href="{{ path('corps_enseignant_add') }}" class="btn btn-success">
            + Ajouter un enseignant
        </a>
    </div>

        <form method="get" action="{{ path('corps_enseignant_list') }}" class="mb-3 d-flex" style="gap: 10px;">
            <input type="text"
                   name="filtre"
                   value="{{ filtre }}"
                   placeholder="Rechercher par nom"
                   class="form-control"
                   style="max-width: 300px;">
            <button type="submit" class="btn btn-jaune">Rechercher</button>
            <a href="{{ path('corps_enseignant_list') }}" class="btn btn-secondary">Réinitialiser</a>
        </form>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nom de famille</th>
                    <th>Prénom</th>
                    <th>Nombre d'heure</th>
                    <th>Modules enseignés</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for enseignant in enseignants %}
                    <tr>
                        <td>{{ enseignant.nom }}</td>
                        <td>{{ enseignant.prenom }}</td>
                        <td>{{ enseignant.nbHeure }}</td>
                        <td>
                            {% if enseignant.modules is not empty %}
                                <ul class="mb-0">
                                    {% for module in enseignant.modules %}
                                        <li>{{ module.description }}</li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <em>Aucun module associé</em>
                            {% endif %}
                        </td>
                        
                        <td>
                            <a href="{{ path('corps_enseignant_edit', {'id': enseignant.id}) }}" class="btn btn-sm btn-primary">
                            Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun enseignant trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}